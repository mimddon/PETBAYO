<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="book">

    <resultMap id="BookResultMap" type="com.petbayo.petbayo.Model.Book">
        <id column="pet_id" property="petId"/>
        <result column="species" property="species"/>
        <result column="description" property="description"/>
    </resultMap>

    <select id="bookList" resultMap="BookResultMap">
        SELECT * FROM petbook
    </select>

    <insert id="create" parameterType="com.petbayo.petbayo.Model.Book">
        INSERT INTO petbook (pet_id, species, description)
        VALUES (#{petId}, #{species}, #{description})
    </insert>

    <select id="item" resultType="com.petbayo.petbayo.Model.Book">
        SELECT * FROM petbook
        WHERE pet_id = #{petId}
    </select>

    <update id="update" parameterType="com.petbayo.petbayo.Model.Book">
        UPDATE petbook
        SET  species = #{species}, description = #{description}
        WHERE pet_id = #{petId}
    </update>

   <delete id="delete">
       DELETE FROM petbook where pet_id=${petId}
   </delete>



</mapper>
