<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="users">

    <resultMap id="userResultMap" type="com.petbayo.petbayo.Model.User">
        <id property="userId" column="user_id"/>
        <result property="email" column="email"/>
        <result property="pwd" column="pwd"/>
        <result property="nickname" column="nickname"/>
        <result property="birth" column="birth"/>
        <result property="gender" column="gender"/>
    </resultMap>

    <select id="login" resultMap="userResultMap">
        SELECT * FROM users
        WHERE email=#{email} AND pwd=#{pwd}
    </select>

    <insert id="register" parameterType="com.petbayo.petbayo.Model.User">
        INSERT INTO users (user_id, email, pwd, nickname, birth, gender)
        VALUES (#{userId}, #{email}, #{pwd}, #{nickname}, #{birth}, #{gender})
    </insert>

    <select id="checkEmail" parameterType="String" resultType="int">
        SELECT COUNT(*) FROM users
        WHERE email=#{email}
    </select>

    <select id="checkNickname" parameterType="String" resultType="int">
        SELECT COUNT(*) FROM users
        WHERE nickname=#{nickname}
    </select>

</mapper>